# Production Environment Configuration
# Copy this file to .env.production and fill in your values

# OpenAI/OpenRouter API Keys
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=https://vietnam-reels-rag.vercel.app
OPENROUTER_APP_NAME=Vietnam Reels RAG

# Vector Database (Choose one)
# Option 1: Qdrant Cloud
QDRANT_URL=https://your-cluster.qdrant.tech:6333
QDRANT_API_KEY=your_qdrant_api_key

# Option 2: Self-hosted Qdrant
# QDRANT_URL=http://your-qdrant-server:6333

# Option 3: PostgreSQL with pgvector (alternative)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Vector Search Configuration
QDRANT_COLLECTION=flowise_reels
EMBEDDINGS_MODEL=text-embedding-3-large
MAX_TOKENS_PER_CHUNK=800
OVERLAP_TOKENS=100

# Application Configuration
SQLITE_PATH=/tmp/database.sqlite
PORT=8000

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://your-backend-url.railway.app
NEXT_PUBLIC_RAG_ENDPOINT=https://your-backend-url.railway.app

# Content Configuration
TOPIC=Vietnam travel reels