{
  "version": 2,
  "name": "vietnam-reels-rag",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "@vietnam-reels-api-url",
    "NEXT_PUBLIC_RAG_ENDPOINT": "@vietnam-reels-api-url"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "@vietnam-reels-api-url",
      "NEXT_PUBLIC_RAG_ENDPOINT": "@vietnam-reels-api-url"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "$NEXT_PUBLIC_API_URL/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}